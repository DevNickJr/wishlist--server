{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "CommonJS",   
    "moduleResolution": "Node",               
    "baseUrl": "./",   
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "./src",
    "outDir": "./dist",                                                                      
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                                 
    "skipLibCheck": true,
    "typeRoots" : ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
}